<script>
  import global from '/js/globals.js';
  export default async (props, { $f7, $, $app, $update, $on }) => {
    // Login screen demo data
    let username = '';
    let password = '';
    let comment = '';
    let locs = {"locations" : ['Nb', 'B', "H4"]};
    global.importSettings();
    console.log("start");
    if(localStorage.getItem("first-start") != "done"){
      console.log(global.getLocation());
      await global.initLocation();
      locs = global.getLocations();
      //$("#startPopup").open();
      localStorage.setItem("first-start", "done");
    }

    await global.initProviders();
    let d = new Date();
    await global.initOffers(d.getFullYear().toString() + "-" + (d.getMonth() + 1).toString() + "-" + d.getDate().toString());
   
    let th = global.getTheme();

    const updateComment = (e) => {
      comment = e.target.value;
      $update();
    }

    const updateUsername = (e) => {
      username = e.target.value;
      $update();
    }
    const updatePassword = (e) => {
      password = e.target.value;
      $update();
    }
    const alertLoginData = () => {
      $f7.dialog.alert('Username: ' + username + '<br/>Password: ' + password, () => {
        $f7.loginScreen.close();
      });
    }
    const addComment = () => {
      if(comment == ''){
        return;
      }
      let mealObject = global.getOffers().filter(m => m.id == global.getId())[0];
      mealObject.comments.push(comment);
      console.log(comment);
      global.pushRating(5,comment);
      comment = "";
      $update();
    }
    



    const changeLoc = (e) => {
      global.setLocation(e.target.value);
    }

    const changeColorTheme = () => {
      if(global.getTheme() == "theme-dark"){
        global.setTheme("");
      }
      else{
        global.setTheme("theme-dark");
      }
    }
    const isReady = () => {
      global.saveSettings();
      location.reload();
    }
    $on('pageInit', (e, page) => {
    });

    return $render;
  }
</script>